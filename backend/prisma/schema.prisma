generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id        Int       @id @default(autoincrement())
  nome      String
  email     String    @unique
  senha     String    // guarda o hash (bcrypt)
  eventos   Evento[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Evento {
  id        Int       @id @default(autoincrement())
  titulo    String
  data      DateTime
  usuarioId Int
  usuario   Usuario   @relation(fields: [usuarioId], references: [id])
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@index([usuarioId])
}
